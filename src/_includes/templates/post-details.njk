<div class="post-details">
  {% if author %}
    {% set page = search.page("type=author author='" + author + "'") %}
    {% if page %}
      <p>By <a data-pagefind-filter="author" href="{{ page.data.url }}">{{ author }}</a></p>
    {% else %}
      <p>By {{ author }}</p>
    {% endif %}
  {% endif %}

  <p>
    <time datetime="{{ date | date('DATETIME') }}">
      {{ date | date('HUMAN_DATE') }}
    </time>
  </p>

  <p>{{ readingTime.minutes }} min read</p>

  <div class="post-tags">
    {% for tag in tags %}
      {% set page = search.page("type=tag tag='" + tag + "'") %}

      {% if page %}
        <a data-pagefind-filter="filter" class="badge" href="{{ page.data.url }}">{{ tag }}</a>
      {% endif %}
    {% endfor %}
  </div>
</div>
